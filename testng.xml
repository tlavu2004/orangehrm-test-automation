<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="OrangeHRM Test Suite" parallel="tests" thread-count="3" verbose="1">
    
    <!-- Suite-level parameters -->
    <parameter name="baseUrl" value="https://opensource-demo.orangehrmlive.com/"/>
    
    <!-- Chrome Browser Tests -->
    <test name="Chrome Browser Tests" parallel="false">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.orangehrm.tests.MyInfoTest">
                <methods>
                    <include name="testMyInfoPersonalDetails"/>
                </methods>
            </class>
            <class name="com.orangehrm.tests.LeaveTest">
                <methods>
                    <include name="testLeaveManagement"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Firefox Browser Tests -->
    <test name="Firefox Browser Tests" parallel="false" enabled="false">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.orangehrm.tests.MyInfoTest"/>
            <class name="com.orangehrm.tests.LeaveTest"/>
        </classes>
    </test>
    
    <!-- Edge Browser Tests -->
    <test name="Edge Browser Tests" parallel="false" enabled="false">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.orangehrm.tests.MyInfoTest"/>
            <class name="com.orangehrm.tests.LeaveTest"/>
        </classes>
    </test>
    
    <!-- Data-Driven Tests (All browsers) -->
    <test name="Data-Driven Tests - Chrome" parallel="false" enabled="false">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.orangehrm.tests.MyInfoTest">
                <methods>
                    <include name="testMyInfoPersonalDetails"/>
                </methods>
            </class>
            <class name="com.orangehrm.tests.LeaveTest">
                <methods>
                    <include name="testLeaveManagement"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Listeners -->
    <!-- <listeners>
        <listener class-name="com.orangehrm.listeners.TestListener"/>
    </listeners> -->
    
</suite>
